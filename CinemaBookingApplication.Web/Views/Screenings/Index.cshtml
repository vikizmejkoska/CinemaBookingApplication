@model IEnumerable<CinemaBookingApplication.Domain.DomainModels.Screening>
@{
    ViewData["Title"] = "Screenings";
    var isAdmin = User.IsInRole("Admin");
}

<style>
    .screening-card .card-body {
        padding: .5rem .5rem;
    }

    .screening-card .card-footer {
        padding: .25rem .5rem .6rem;
    }

    .screening-card .title {
        font-size: 1rem; 
        font-weight: 600; 
        line-height: 1.2;
    }

    .screening-card .meta {
        font-size: .8rem;
    }
</style>

<h1 class="mb-3">Screenings</h1>

@if (isAdmin)
{
    <p><a asp-action="Create" class="btn btn-primary btn-sm">Create New</a></p>
}

@if (Model?.Any() == true)
{
    <div class="row row-cols-2 row-cols-sm-3 row-cols-md-4 row-cols-lg-5 row-cols-xl-6 g-3">
        @foreach (var s in Model)
        {
            <div class="col">
                <div class="card screening-card h-100 shadow-sm">
                    @if (!string.IsNullOrWhiteSpace(s.Movie?.PosterUrl))
                    {
                        <img src="@s.Movie?.PosterUrl" alt="poster"
                             class="card-img-top object-fit-cover"
                             style="aspect-ratio:2/3;" />
                    }
                    else
                    {
                        <div class="bg-light d-flex align-items-center justify-content-center" style="aspect-ratio:2/3;">
                            <span class="text-muted">No poster</span>
                        </div>
                    }

                    <div class="card-body">
                        <div class="title text-truncate" title="@s.Movie?.Title">@s.Movie?.Title</div>
                        <div class="meta text-muted">@s.Hall?.Name · @s.StartTime.ToString("g")</div>
                        <div class="meta fw-semibold mt-1">@s.Price.ToString("C")</div>
                    </div>

                    <div class="card-footer bg-transparent border-0">
                        <div class="d-flex gap-2 flex-wrap">
                            @if (isAdmin)
                            {
                                <a asp-action="Edit" asp-route-id="@s.Id" class="link-primary">Edit</a>
                            }
                            <a asp-action="Details" asp-route-id="@s.Id" class="link-secondary">Details</a>
                            @if (isAdmin)
                            {
                                <form asp-action="Delete" asp-route-id="@s.Id" method="post" asp-antiforgery="true" class="d-inline">
                                    <button type="submit" class="btn btn-link p-0 align-baseline text-danger"
                                            onclick="return confirm('Delete this screening?');">
                                        Delete
                                    </button>
                                </form>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p class="text-muted">No screenings yet.</p>
}
