@model IEnumerable<CinemaBookingApplication.Domain.DomainModels.Screening>
@{
    ViewData["Title"] = "Screenings";
}
<h1 class="mb-3">Screenings</h1>

<p><a asp-action="Create" class="btn btn-primary">Create New</a></p>

@if (Model != null && Model.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Movie</th>
                <th>Hall</th>
                <th>Start Time</th>
                <th>Price</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var s in Model)
            {
                <tr>
                    <td>@s.Movie?.Title</td>
                    <td>@s.Hall?.Name</td>
                    <td>@s.StartTime.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>@s.Price</td>
                    <td class="text-nowrap">
                        <a asp-action="Edit" asp-route-id="@s.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@s.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@s.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
     <p class="text-muted">No screenings yet.</p>
}
