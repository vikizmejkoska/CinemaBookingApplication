@model IEnumerable<CinemaBookingApplication.Domain.DomainModels.Hall>
@{
    ViewData["Title"] = "Halls";
    var isAdmin = User.IsInRole("Admin");
}
<h1 class="mb-3">Halls</h1>

@if (isAdmin)
{
    <p><a asp-action="Create" class="btn btn-primary">Create New</a></p>
}

@if (Model?.Any() == true)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Capacity</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Capacity</td>
                    <td class="text-nowrap">
                        @if (isAdmin)
                        {
                            <a asp-action="Edit" asp-route-id="@item.Id" class="link-primary">Edit</a>
                            <span class="mx-1 text-muted">|</span>
                        }
                        <a asp-action="Details" asp-route-id="@item.Id" class="link-secondary">Details</a>
                        @if (isAdmin)
                        {
                            <span class="mx-1 text-muted">|</span>
                            <form asp-action="Delete"
                                  asp-route-id="@item.Id"
                                  method="post"
                                  asp-antiforgery="true"
                                  class="d-inline"
                                  onsubmit="return confirm('Delete this hall?');">
                                <button type="submit" class="btn btn-link p-0 align-baseline link-danger">Delete</button>
                            </form>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-muted">No halls yet.</p>
}
