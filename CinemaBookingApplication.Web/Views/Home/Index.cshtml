@{
    ViewData["Title"] = "Welcome";
}
<div class="py-5">
    <h1 class="display-5 text-center mb-4">Welcome to CinemaBooking</h1>
    <p class="text-center text-muted mb-5">Manage movies, halls, screenings and reservations.</p>

    <div class="row g-3">
        <div class="col-md-3">
            <a asp-controller="Movies" asp-action="Index" class="text-decoration-none">
                <div class="card h-100 shadow-sm">
                    <div class="card-body text-center">
                        <h5 class="card-title mb-2">Movies</h5>
                        <div class="text-muted">Import & manage titles</div>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-3">
            <a asp-controller="Screenings" asp-action="Index" class="text-decoration-none">
                <div class="card h-100 shadow-sm">
                    <div class="card-body text-center">
                        <h5 class="card-title mb-2">Screenings</h5>
                        <div class="text-muted">Schedule & pricing</div>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-3">
            <a asp-controller="Halls" asp-action="Index" class="text-decoration-none">
                <div class="card h-100 shadow-sm">
                    <div class="card-body text-center">
                        <h5 class="card-title mb-2">Halls</h5>
                        <div class="text-muted">Manage theaters</div>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-3">
            <a asp-controller="Reservations" asp-action="Index" class="text-decoration-none">
                <div class="card h-100 shadow-sm">
                    <div class="card-body text-center">
                        <h5 class="card-title mb-2">Reservations</h5>
                        <div class="text-muted">View bookings</div>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>
