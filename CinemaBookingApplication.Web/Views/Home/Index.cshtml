@{
    ViewData["Title"] = "Welcome";
}
<div class="py-1">

    <div class="text-center">
        <img src="~/img/hero-popcorn.png"
             alt="Cinema popcorn and film reel"
             class="img-fluid d-inline-block"
             style="max-height:340px; " />
    </div>

    <h1 class="display-5 text-center mb-4">Movie night, made easy.</h1>
    <p class="text-center text-muted mb-5">Explore movies, pick a screening, and you’re in.</p>

    <div class="row g-3">
        <div class="col-md-3">
            <a asp-controller="Movies" asp-action="Index" class="text-decoration-none">
                <div class="card h-100 shadow-sm">
                    <div class="card-body text-center">
                        <h5 class="card-title mb-2" style="color:#2f343a;">Movies</h5>
                        <div class="text-muted">Browse movies</div>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-3">
            <a asp-controller="Screenings" asp-action="Index" class="text-decoration-none">
                <div class="card h-100 shadow-sm">
                    <div class="card-body text-center">
                        <h5 class="card-title mb-2" style="color:#2f343a;">Screenings</h5>
                        <div class="text-muted">Upcoming screenings</div>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-3">
            <a asp-controller="Halls" asp-action="Index" class="text-decoration-none">
                <div class="card h-100 shadow-sm">
                    <div class="card-body text-center">
                        <h5 class="card-title mb-2" style="color:#2f343a;">Halls</h5>
                        <div class="text-muted">Seats & capacity</div>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-3">
            <a asp-controller="Reservations" asp-action="Index" class="text-decoration-none">
                <div class="card h-100 shadow-sm">
                    <div class="card-body text-center">
                        <h5 class="card-title mb-2" style="color:#2f343a;">Reservations</h5>
                        <div class="text-muted">View bookings</div>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>
