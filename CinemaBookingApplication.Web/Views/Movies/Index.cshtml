@model IEnumerable<CinemaBookingApplication.Domain.DomainModels.Movie>
@{
    ViewData["Title"] = "Movies";
    var isAdmin = User.IsInRole("Admin");
}

<style>
    
    .movie-card .card-body {
        padding: .5rem .5rem;
    }

    .movie-card .card-footer {
        padding: .25rem .5rem .6rem;
    }

    .movie-card .card-title {
        font-size: 1rem; 
        font-weight: 600;
        margin-bottom: .15rem;
        line-height: 1.2;
    }

    .movie-card .meta {
        font-size: .8rem;
    }
</style>

<h1 class="mb-3">Movies</h1>

@if (isAdmin)
{
    <div class="d-flex gap-2 mb-3 align-items-center">
        <a asp-action="Create" class="btn btn-primary btn-sm">Create New</a>
        <form asp-action="Import" method="post" class="d-flex gap-2">
            <select name="query" class="form-select form-select-sm w-auto">
                <option value="popular">Popular</option>
                <option value="top_rated">Top rated</option>
                <option value="The Matrix">Search: "The Matrix"</option>
            </select>
            <button type="submit" class="btn btn-success btn-sm">Import from TMDB</button>
        </form>
    </div>
}

@if (Model?.Any() == true)
{
    <div class="row row-cols-2 row-cols-sm-3 row-cols-md-4 row-cols-lg-5 row-cols-xl-6 g-3">
        @foreach (var m in Model)
        {
            <div class="col">
                <div class="card movie-card h-100 shadow-sm">
                    @if (!string.IsNullOrWhiteSpace(m.PosterUrl))
                    {
                        <img src="@m.PosterUrl" alt="poster"
                             class="card-img-top object-fit-cover"
                             style="aspect-ratio:2/3;" />
                    }
                    else
                    {
                        <div class="bg-light d-flex align-items-center justify-content-center" style="aspect-ratio:2/3;">
                            <span class="text-muted">No poster</span>
                        </div>
                    }

                    <div class="card-body">
                        <div class="card-title text-truncate" title="@m.Title">@m.Title</div>
                        <div class="meta text-muted">@m.Runtime min · @m.Rating.ToString("0.0")</div>
                    </div>

                    <div class="card-footer bg-transparent border-0">
                        <div class="d-flex gap-2 flex-wrap">
                            @if (isAdmin)
                            {
                                <a asp-action="Edit" asp-route-id="@m.Id" class="link-primary">Edit</a>
                            }
                            <a asp-action="Details" asp-route-id="@m.Id" class="link-secondary">Details</a>
                            @if (isAdmin)
                            {
                                <form asp-action="Delete" asp-route-id="@m.Id" method="post" asp-antiforgery="true" class="d-inline">
                                    <button type="submit" class="btn btn-link p-0 align-baseline text-danger"
                                            onclick="return confirm('Delete this movie?');">
                                        Delete
                                    </button>
                                </form>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p class="text-muted">No movies yet.</p>
}
