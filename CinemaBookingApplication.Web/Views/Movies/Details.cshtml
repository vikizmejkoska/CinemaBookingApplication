@model CinemaBookingApplication.Domain.DomainModels.Movie
@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<h4>Movie</h4>
<hr />
<dl class="row">
    <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Title)</dt>
    <dd class="col-sm-10">@Html.DisplayFor(m => m.Title)</dd>

    <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Overview)</dt>
    <dd class="col-sm-10">@Html.DisplayFor(m => m.Overview)</dd>

    <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Runtime)</dt>
    <dd class="col-sm-10">@Html.DisplayFor(m => m.Runtime)</dd>

    <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Rating)</dt>
    <dd class="col-sm-10">@Html.DisplayFor(m => m.Rating)</dd>

    <dt class="col-sm-2">Poster</dt>
    <dd class="col-sm-10">
        @if (!string.IsNullOrWhiteSpace(Model.PosterUrl))
        {
            <img src="@Model.PosterUrl"
                 alt="@Model.Title poster"
                 class="img-fluid rounded shadow-sm"
                 style="max-height:350px" />
        }
        else
        {
            <span class="text-muted">No poster</span>
        }
    </dd>
</dl>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
