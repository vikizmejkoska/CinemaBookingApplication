@model IEnumerable<CinemaBookingApplication.Domain.DomainModels.Reservation>
@using CinemaBookingApplication.Domain.DomainModels
@using System.Security.Claims
@{
    ViewData["Title"] = "Reservations";
    var currentUserId = User.FindFirstValue(ClaimTypes.NameIdentifier);
}
<h1>Reservations</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
    @if (User.IsInRole("Admin"))
    {
        <form asp-action="ExpireStale" method="post" class="d-inline">
            <button type="submit" class="btn btn-outline-warning">Expire old pending</button>
        </form>
    }
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Movie</th>
            <th>Hall</th>
            <th>Start</th>
            <th>Qty</th>
            <th>Total</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model)
        {
            <tr>
                <td>@r.Screening.Movie.Title</td>
                <td>@r.Screening.Hall.Name</td>
                <td>@r.Screening.StartTime</td>
                <td>@r.Quantity</td>
                <td>@r.TotalPrice.ToString("C")</td>
                <td>@r.Status</td>
                <td class="d-flex gap-2">
                    <a asp-action="Details" asp-route-id="@r.Id" class="btn btn-sm btn-link link-secondary">Details</a>

                    @if (r.Status == ReservationStatus.Pending && (User.IsInRole("Admin") || r.UserId == currentUserId))
                    {
                        <form asp-action="Confirm" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@r.Id" />
                            <button type="submit" class="btn btn-sm btn-success">Confirm</button>
                        </form>

                        <form asp-action="Cancel" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@r.Id" />
                            <button type="submit" class="btn btn-sm btn-outline-danger">Cancel</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
